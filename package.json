{
  "name": "speech-to-paste",
  "version": "0.1.0",
  "description": "Windows desktop application for speech-to-text transcription with automatic text insertion using OpenAI Whisper",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "package": "npm run build && pkg .",
    "package-release": "npm run build && pkg . --compress Brotli"
  },
  "author": "Ed Johnson (Neon Fish)",
  "license": "UNLICENSED",
  "bin": "dist/index.js",
  "dependencies": {
    "@picovoice/leopard-node": "^3.0.0",
    "@picovoice/pvrecorder-node": "^1.2.2",
    "@types/node-notifier": "^8.0.5",
    "clipboardy": "2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-notifier": "^10.0.1",
    "openai": "^4.20.1",
    "play-sound": "^1.1.6",
    "robotjs": "^0.6.0",
    "systray2": "^2.0.3",
    "uiohook-napi": "^1.5.3",
    "whisper-node": "^1.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@yao-pkg/pkg": "^5.11.5",
    "canvas": "^3.2.0",
    "png-to-ico": "^3.0.1",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "icons/**/*",
      "lib/mpg123/**/*",
      "assets/sounds/**/*",
      "node_modules/@picovoice/pvrecorder-node/**/*",
      "node_modules/@picovoice/leopard-node/**/*",
      "node_modules/robotjs/**/*",
      "node_modules/uiohook-napi/**/*",
      "node_modules/whisper-node/**/*"
    ],
    "outputPath": "bin",
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-linux-x64"
    ]
  }
}
